{
    "name": "stream-together",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "test": "npm run lint"
    },
    "dependencies": {
        "bulma": "^0.7.2",
        "reconnecting-websocket": "^4.1.10",
        "vue": "^2.5.17",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1",
        "vuex-persist": "^1.7.2"
    },
    "devDependencies": {
        "@vue/babel-preset-app": "^3.0.5",
        "@vue/cli-plugin-babel": "^3.0.5",
        "@vue/cli-plugin-eslint": "^3.0.5",
        "@vue/cli-service": "^3.0.5",
        "@vue/eslint-config-airbnb": "^3.0.5",
        "node-sass": "^4.9.4",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.5.17"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/airbnb"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "import/prefer-default-export": "off",
            "no-console": "off",
            "default-case": "off",
            "no-return-assign": "off",
            "no-shadow": "off"
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
